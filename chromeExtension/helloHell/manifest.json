{
    "manifest_version": 3,
    "name": "Bear的Tab一目了然小工具 ❤️",
    "version": "1.0",
    "permissions": [
        "sidePanel",
        "tabs",
        "downloads",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "default_icon.png",
        "48": "default_icon.png",
        "128": "default_icon.png"
    },
    "action": {
        "default_icon": {
            "16": "default_icon.png",
            "48": "default_icon.png",
            "128": "default_icon.png"
        },
        "default_title": "Bear的Tab一目了然小工具 ❤️"
    },
    "side_panel": {
        "default_path": "side_panel.html"
    }
}